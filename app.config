[{lager, [
  {log_root, "./log"},
  %% Default handlers for lager/lager_event
  {handlers, [
    {lager_console_backend, [{level, info}]},
    {lager_file_backend, [{file, "error.log"}, {level, error}]},
    {lager_file_backend, [{file, "console.log"}, {level, info}]}
  ]},

  %% Any other sinks
  {extra_sinks,
    [

      {lagerConsole_lager_event,
        [{handlers,
          [
            {lager_file_backend, [{file, "lagerConsole.log"}, {level, info}, {formatter, lager_default_formatter},
              {formatter_config, [time, pid, " ", message, "\n"]}]}
          ]
        }]
      },

      {inout_lager_event,
        [{handlers,
          [
            {lager_file_backend, [{file, "in_out.log"}, {level, info}, {formatter, lager_default_formatter},
              {formatter_config, [time, pid, " ", message, "\n"]}]}
            ]
          }]
        },

      {unexpected_lager_event,
        [{handlers,
          [
            {lager_file_backend, [{file, "unexpected.log"}, {level, info}, {formatter, lager_default_formatter},
              {formatter_config, [time," [",severity,"] ",pid, " ", message, "\n"]}]}
          ]
        }]
      }

    ]
  }

]}].